{% extends 'base.html.twig' %}

{% block title %}
    Création d'un camping
{% endblock %}

{% block section %}

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">Création d'un camping</div>
        <div class="panel-body">
          <div class="container col-md-10 col-md-offset-1">
        {{ form_start(form) }}
            {#{{ form_widget(form) }}#}
            {{ form_row(form.nomCamping) }}
            {{ form_row(form.region) }}    {# <select id="meetup_sport" ... #}
            {{ form_row(form.departement) }} {# <select id="meetup_position" ... #}
            {{ form_row(form.ville) }}
        
    <hr>
        <table>
          <tr>
            <td><input type="submit" value="Créer un camping" class="button" >
              {{ form_end(form) }}
            </td>
            <td>
              <div class="buttonLink">
                <a href="{{ path('camping_index') }}">Retour à la liste</a>
              </div>
            </td>
          </tr>
        </table>
{% endblock %}
