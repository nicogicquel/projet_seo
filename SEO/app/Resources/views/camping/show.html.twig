{% extends 'base.html.twig' %}

{% block section %}
    <h1>Camping {{ camping.nomCamping }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom du Camping</th>
                <td>{{ camping.nomCamping }}</td>
            </tr>
            <tr>
                <th>Département</th>
                {% if camping.departement == NULL %}
                <td></td>
                {% else %}
                <td>{{ camping.departement.nom }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Région</th>
                {% if camping.region == NULL %}
                <td></td>
                {% else %}
                <td>{{ camping.region.nom }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Ville</th>
                {% if camping.ville == NULL %}
                <td></td>
                {% else %}
                <td>{{ camping.ville.nom }}</td>
                {% endif %}
            </tr>
        </tbody>
    </table>
</br>
     <table>
            <tr>
                <td>
                    <div class="buttonLink">
                        <a href="{{ path('camping_index') }}">Retour à la liste</a>
                    </div>
                </td>
                <td>
                    <div class="buttonLink">
                        <a href="{{ path('camping_edit', { 'id': camping.id }) }}">Modifier</a>
                    </div>
                </td>
                <td>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Supprimer" class="buttonSup">
                {{ form_end(delete_form) }}
                </td>
            </tr>
        </table>
    <br>
    <h2>Suggestions</h2>
    <br>

    <table id="tableau" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Url</th>
                <th>Statut</th>
                <th>CT</th>
                <th>TF</th>
                <th>Topic</th>
                <th>Langue</th>
                <th>Région</th>
                <th>Département</th>
                <th>Ville</th>
                <th>Type</th>
                <th>Difficultés</th>
                <th>Infos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="{{ site.url }}">{{ site.url }}</a></td>
                {% if site.statut == NULL %}
                <td></td>
                {% else %}
                <td>{{ site.statut.nom }}</td>
                {% endif %}
                <td>{{ site.cT }}</td>
                <td>{{ site.tF }}</td>
                {% if site.topical == NULL %}
                <td></td>
                {% else %}
                <td>{{ site.topical.nom }}</td>
                {% endif %}
                {% if site.langue == NULL %}
                <td></td>
                {% else %}
                <td>{{ site.langue.nom }}</td>
                {% endif %}
                {% if site.region == NULL %}
                <td></td>
                {% else %}
                <td>{{ site.region.nom }}</td>
                {% endif %}
                {% if site.departement == NULL %}
                <td></td>
                {% else %}
                <td>{{ site.departement.nom }}</td>
                {% endif %}
                {% if site.ville == NULL %}
                <td></td>
                {% else %}
                <td>{{ site.ville.nom }}</td>
                {% endif %}
                {% if site.type == NULL %}
                <td></td>
                {% else %}
                <td>{{ site.type.nom }}</td>
                {% endif %}
                <td>{{ site.difficulte }}</td>
                <td>{{ site.infos }}</td>
                
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('site_edit', { 'id': site.id }) }}">Modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('site_edit', { 'id': site.id }) }}">Supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
        
{% endblock %}
