{% extends 'base.html.twig' %}

{% block section %}
    <h1>Liste des Campings</h1>

    <table class='table'>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Département</th>
                <th>Région</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for camping in campings %}
            <tr>
                <td><a href="{{ path('camping_show', { 'id': camping.id }) }}">{{ camping.nomCamping }}</a></td>
                <td>{{ camping.departement.nom }}</td>
                <td>{{ camping.region.nom }}</td>
                <td>{{ camping.ville.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('camping_show', { 'id': camping.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('camping_edit', { 'id': camping.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('camping_new') }}">Create a new camping</a>
        </li>
    </ul>
{% endblock %}
