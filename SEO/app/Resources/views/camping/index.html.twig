{% extends 'backlinks.html.twig' %}

    {% block title %} Liste des Campings {% endblock %}
        
{% block section %}
    <div class="formHead">
        <h1>Liste des Campings</h1>
        <div class="buttonAdd">
            <a href="{{ path('camping_new') }}">Ajouter un nouveau camping</a>
        </div>
    </div>

    <table class='table'>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Région</th>
                <th>Département</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for camping in campings %}
            <tr>
                <td><a href="{{ path('camping_show', { 'id': camping.id }) }}">{{ camping.nomCamping }}</a></td>
                {% if camping.region == NULL %}
                <td></td>
                {% else %}
                <td>{{ camping.region.nom }}</td>
                {% endif %}
                {% if camping.departement == NULL %}
                <td></td>
                {% else %}
                <td>{{ camping.departement.nom }}</td>
                {% endif %}
                {% if camping.ville == NULL %}
                <td></td>
                {% else %}
                <td>{{ camping.ville.nom }}</td>
                {% endif %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('camping_show', { 'id': camping.id }) }}">Suggestion d'url</a>
                        </li>
                        <li>
                            <a href="{{ path('camping_edit', { 'id': camping.id }) }}">Modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('camping_delete', { 'id': camping.id }) }}">Supprimer </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="buttonAddBottom">
        <a href="{{ path('camping_new') }}">Ajouter un nouveau camping</a>
    </div>
{% endblock %}
