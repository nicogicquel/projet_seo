{% extends 'backlinks.html.twig' %}

{% block title %}Liste des rôles{% endblock %}

{% block section %}
    <div class="formHead">
        <h1>Liste des roles</h1>
        <div class="buttonAdd">
            <a href="{{ path('role_new') }}">Ajouter un nouveau rôle</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Libellé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.role }}</a></td>
                <td>{{ role.name }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('role_edit', { 'id': role.id }) }}">Modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('role_edit', { 'id': role.id }) }}">Supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="buttonAddBottom">
        <a href="{{ path('role_new') }}">Ajouter un nouveau rôle</a>
    </div>
{% endblock %}