{% extends 'backlinks.html.twig' %}

{% block title %}
    Liste des villes
{% endblock %}

{% block section %}
    <h1>Villes list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td><a href="{{ path('ville_show', { 'id': ville.id }) }}">{{ ville.id }}</a></td>
                <td>{{ ville.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ville_show', { 'id': ville.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('ville_edit', { 'id': ville.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ville_new') }}">Create a new ville</a>
        </li>
    </ul>
{% endblock %}
