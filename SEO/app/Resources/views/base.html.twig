<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        <link href="{{ asset('public/CSS/bootstrap.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css') }}" rel="stylesheet" type="text/css"/>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
        <link type="text/css" rel="stylesheet" media="all" href="{{ asset('public/CSS/style.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            {% block header %}
                <div class="header_container">
                    <div class="logo_container">
                        <a class="logo"><img src="{{ asset('public/img/logo.png') }}"></a>
                    </div>
                    <div class="header_title">
                        <h1>Gestion des Backlinks</h1>
                    </div>
                </div>
            {% endblock %}
            {% block section %}
            {% endblock %}
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('public/script/jquery-3.1.0.min.js') }}"></script>
            <script src="{{ asset('public/script/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
