{% extends 'backlinks.html.twig' %}

{% block section %}
    <h1>Departements list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for departement in departements %}
            <tr>
                <td><a href="{{ path('departement_show', { 'id': departement.id }) }}">{{ departement.id }}</a></td>
                <td>{{ departement.code }}</td>
                <td>{{ departement.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('departement_show', { 'id': departement.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('departement_edit', { 'id': departement.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('departement_new') }}">Create a new departement</a>
        </li>
    </ul>
{% endblock %}
