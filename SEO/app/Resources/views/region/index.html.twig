{% extends 'backlinks.html.twig' %}

{% block title %}
    Liste des régions
{% endblock %}

{% block section %}

    <div class="formHead">
        <h1>Liste des régions</h1>
        <div class="buttonAdd">
            <a href="{{ path('region_new') }}">Ajouter une nouvelle région</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td><a href="{{ path('region_edit', { 'id': region.id }) }}">{{ region.nom }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('region_edit', { 'id': region.id }) }}">Modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('region_edit', { 'id': region.id }) }}">Supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="buttonAddBottom">
        <a href="{{ path('region_new') }}">Ajouter une nouvelle région</a>
    </div>
{% endblock %}
